@model Bearchop.Areas.LOTW.Web.ViewModels.GamesViewModel

@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Areas/LOTW/Views/Shared/_lotwLayout.cshtml";
 }

    
    <section id="weeks"><ul class="nav nav-pills">
        @foreach(var week in Model.Weeks.Where(w => w.Number <= Model.CurrentWeek.Number + 1))
        {
            <li @Html.Raw(week.Number == Model.CurrentWeek.Number ? "class='active'" : string.Empty)>                
                @Html.ActionLink("Week " + week.Number, "List", "Game", new { area="lotw", week = week.Number}, null)                
            </li>
        }
    </ul></section>
    <section id="currentGamesContainer">
        @Html.Partial("_GameList", Model)
    </section>

@section javascript
{
    <script language="javascript" type="text/javascript">

        $(function () {

            $('.games').addClass('active');
        });

    </script>
}